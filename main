#include <iostream>
#include <stdlib.h>

using namespace std;
int main(int argc, char** argv) {
	
	char destination;
	int x = 1;
	int y = 1;
	int height = 9;
	int width = 9;
	char board[width][height];
	string again;

	//szkic planszy	
	for(int i = 0; i < height; i++) 
	{
		for(int j = 0; j < width; j++)
		{
		board[i][j] = 'X';
		board[y][x] = 'O';
		cout<<board[i][j];
		}		  
		cout<<"\n";	
	}
	
	do
	{
		cout<<"(w/s/a/d)\n";
		cin>>destination;
		
		//system poruszania			
			if(destination=='a') //w lewo
			{
				board[y][x] = 'X';
				x-=1;
				board[y][x] = 'O';
			}
			else if(destination=='d') //w prawo
			{
				board[y][x] = 'X';
				x+=1;
				board[y][x] = 'O';
			}
			else if(destination=='w') //w gore
			{
				board[y][x] = 'X';
				y-=1;
				board[y][x] = 'O';
			}
			else if(destination=='s') //w dol
			{
				board[y][x] = 'X';
				y+=1;
				board[y][x] = 'O';
			}
	
		if(x>width-1)
		{
			board[y][x] = 'X';
			x--;
			board[y][x] = 'O';
		}
		else if(x<0)
		{
			board[y][x] = 'X';
			x++;	
			board[y][x] = 'O';
		}
		else if(y>height-1)
		{
			board[y][x] = 'X';
			y--;
			board[y][x] = 'O';
		}
		else if(y<0)
		{
			board[y][x] = 'X';
			y++;
			board[y][x] = 'O';
		}
	
		//aktualizowanie planszy
		
		system ("CLS");
		
		for(int i = 0; i < height; i++) 
		{
			for(int j = 0; j < width; j++)
			{
			cout<<board[i][j];
			}
			  
			cout<<"\n";
		
		}
		
		//kontynuacja gry
		cout<<"chcesz ruszyc sie ponownie? (y, aby powtorzyc)\n";
		cin>>again;
		
	}while(again=="y");
	
	return 0;
}
